<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ListViewAction.Page3">
    <ContentPage.Content>
        <StackLayout>
            <ScrollView x:Name="MainScroll" VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand">
                <StackLayout
            Orientation="Vertical" x:Name="layout">
                    <Entry Placeholder="Numero 1" x:Name="num1"></Entry>
                    <Entry Placeholder="Numero 2" x:Name="num2"></Entry>
                    <Button Text="Calcular" Clicked ="Button_Clicked"></Button>
                </StackLayout>
            </ScrollView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>