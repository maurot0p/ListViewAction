<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ListViewAction.Page8">
    <ContentPage.Content>
        <StackLayout
         Orientation="Vertical" x:Name="layout">
            <Label Text="El concursante que obtenga una puntuación igual o superior a la del k-ésimo lugar avanzará a la siguiente ronda, siempre y cuando el concursante obtenga una puntuación positiva.                  Calcule cuántos participantes pasarán a la siguiente ronda" FontSize="Large" FontAttributes="Bold"></Label>
            <Entry Placeholder="n(cantidad de participantes)" x:Name="n"></Entry>
            <Entry Placeholder="k(posición a comparar)" x:Name="k"></Entry>
            <Entry Placeholder="Puntuaciones" x:Name="scores"></Entry>
            <Button Text="Calcular" Clicked ="Button_Clicked"></Button>
         
        </StackLayout>
    </ContentPage.Content>
</ContentPage>