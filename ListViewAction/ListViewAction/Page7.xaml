<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ListViewAction.Page7">
    <ContentPage.Content>
        <StackLayout
            Orientation="Vertical" x:Name="layout">
            <Label Text="Calcule el perímetro mínimo de un rectángulo de área A." FontSize="Large" FontAttributes="Bold"></Label>
            <Entry Placeholder="Area" x:Name="areaa"></Entry>
            <Button Text="Calcular" Clicked ="Button_Clicked"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>